<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar {
            border-radius: 10px;
        }

        .container {
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4 px-4 py-2 rounded shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="/">🎓 University</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Departments" asp-action="Index">Departments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Students" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Courses" asp-action="Index">Courses</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        <div>
            @RenderBody()
        </div>

        <footer class="text-center text-muted small mt-4">
            <hr />
            &copy; @DateTime.Now.Year - Made with 💙 by Esraa
        </footer>
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>
