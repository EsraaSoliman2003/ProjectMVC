@model WebApplication3.Models.Student
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewData["Title"] = "Student Details";
}

<h2 class="mb-4 text-primary">Student Details</h2>

<div class="card shadow-sm" style="max-width: 500px;">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Name:</strong> @Model.FullName</p>
        <p><strong>Age:</strong> @Model.Age</p>
        <p><strong>Department:</strong> @Model.Department?.Name</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-outline-secondary mt-4">← Back to List</a>
