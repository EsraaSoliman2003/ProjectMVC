@model WebApplication3.Models.Department
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    ViewData["Title"] = "Edit Department";
}

<h2 class="mb-4 text-primary">Edit Department</h2>

<div class="card shadow-sm p-4" style="max-width: 500px;">
    <form asp-action="Edit" asp-controller="Departments" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-controller="Departments" class="btn btn-outline-secondary ms-2">Back to List</a>
    </form>
</div>
