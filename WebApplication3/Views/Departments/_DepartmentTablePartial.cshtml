@model List<WebApplication3.Models.Department>

<table class="table table-bordered table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortBy="id" class="text-white text-decoration-none">ID</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortBy="name" class="text-white text-decoration-none">Name</a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>
                    <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id" class="btn btn-secondary btn-sm">Details</a>
                    <a asp-controller="Departments" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                    <a asp-controller="Departments" asp-action="Delete" asp-route-id="@department.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this department?')">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
